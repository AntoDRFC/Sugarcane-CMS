<h1>Comments for <?=$this->post['post_title']?></h1><?php if(count($this->comments)): ?><table cellspacing="0" id="blogpostslist">    <?php foreach($this->comments as $comment): ?>        <tr style="margin-bottom: 20px;">            <td style="margin-right: 10px;"><?=$comment['firstname']?> <?=$comment['surname']?></td>            <td style="width: 200px;"><?=$comment['email']?></td>            <td><?=$comment['comment']?></td>            <td style="width: 60px;">                <?php if($comment['approved'] == 'Y'): ?>                    Approved                <?php elseif($comment['approved'] == 'N'): ?>                    Rejected                <?php else: ?>                    Pending Approval                <?php endif; ?>            </td>            <?php if($comment['approved'] == 'P'): ?>                <td class="blogcommentoptions">                    <a href="/blogadmin/approve/comment/<?=$comment['comment_id']?>">Approve</a>                    <a href="/blogadmin/reject/comment/<?=$comment['comment_id']?>">Reject</a>                </td>            <?php else: ?>                <td class="blogcommentoptions"><a href="/blogadmin/delete/comment/<?=$comment['comment_id']?>" class="deletepost">Delete Comment</a></td>            <?php endif; ?>        </tr>    <?php endforeach; ?></table><?php else: ?><p>No comments found</p><?php endif; ?><p><a>Back to blog admin</a></p>